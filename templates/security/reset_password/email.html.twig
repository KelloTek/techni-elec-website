{% set expiration = resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') %}

<div class="flex h-screen w-screen items-center justify-center bg-cover bg-center bg-no-repeat" style="background-image: url({{ asset('build/images/background.svg') }});">
    <div class="flex flex-col items-center overflow-scroll rounded-xl p-12 text-white max-h-[90vh] bg-custom-dark-300 scrollbar-hide">

        <div class="text-center">
            <h1 class="text-3xl font-bold">{{ 'email.reset_password.title'|trans({}, 'emails') }}</h1>
            <p class="mt-3 mb-12">{{ 'email.reset_password.description'|trans({}, 'emails') }}</p>
        </div>


        <div class="text-center mb-3 p-5 font-semibold bg-custom-dark-200 rounded-xl max-w-[50vw]">
            <p>
                {{ 'email.reset_password.content'|trans({'%time%': expiration}, 'emails') }}
            </p>
        </div>

        <div class="flex justify-center">
            <a href="{{ url('app_reset_password', {token: resetToken.token}) }}" class="my-5 cursor-pointer text-center rounded-xl p-3 text-xl bg-custom-orange-200 hover:bg-custom-orange-100">
                {{ 'email.link'|trans({}, 'emails') }}
            </a>
        </div>
    </div>
</div>
