{% extends 'profile-base.html.twig' %}

{% block title %}
    Admin - {{ 'admin.user.delete.title'|trans() }}
{% endblock %}

{% block name %}
    {{ 'admin.user.delete.name'|trans() }}
{% endblock %}

{% block body %}
    {% embed 'components/dashboard/form.html.twig' with {
        title: 'admin.form.delete_user.title'|trans({}, 'forms'),
        description: 'admin.form.delete_user.description'|trans({}, 'forms'),
        submit: 'admin.form.delete_user.submit'|trans({}, 'forms'),
        form: form
    } %}
        {% block form %}
            {{ form_row(form.name) }}
        {% endblock %}

        {% block afterForm %}
            <p class="text-center">
                <a href="{{ path('app_admin_users') }}" class="hover:text-custom-orange-100">
                    {{ 'admin.form.delete_user.back'|trans({}, 'forms') }}
                </a>
            </p>
        {% endblock %}
    {% endembed %}
{% endblock %}
